extends ../main

block variables
    - var title = 'ВЕНТИЛЯТОРЫ ОСЕВЫЕ ДЛЯ ПОДПОРА ВОЗДУХА ВО 25-188'

block content
    main.product
        .container.product__container

            //-back
            button(type='button').product__back Вернуться назад
            //- bread
            .product__bread
                .bread
                    a(href='/').bread__item Главная
                    img(src='images/icons/seporator.png').bread__seporator
                    a(href='/').bread__item Продукция
                    img(src='images/icons/seporator.png').bread__seporator
                    a(href='/').bread__item Вентиляторы осевые
                    img(src='images/icons/seporator.png').bread__seporator
                    span.bread__item.bread__item_active Вентилятор осевой ВО 25-188

            //- title
            .product__title ВЕНТИЛЯТОРЫ ОСЕВЫЕ ДЛЯ ПОДПОРА ВОЗДУХА ВО 25-188

            //- form
            form.product__form
                .row
                    //- left
                    .product__left
                        img(src='images/content/product/img.jpg').product__img

                    //- right
                    .product__right
                        //- list
                        .product__list
                            each i in ['Цилиндрический корпус','Число лопаток – 12','Левого вращения','Прямой привод']
                                .product__item= i

                        //- download
                        a(href='/' download=true).product__download скачать описание во 25-188

                        //- price
                        .product__price
                            .product__price-price 78006.04 руб.
                            .product__price-count
                                .count
                                    .count__left
                                        button(type='button').count__button.count__down -
                                        input(type='number' name='count' value=1 min=1).count__input
                                        button(type='button').count__button.count__up +
                                    .count__right
                                        button(type='button').count__buy
                                            +icon('cart', 'count__buy-svg')



                        //- buttons
                        .product__buttons
                            button(type='button').product__order.jsCallback ОФОРМИТЬ ЗАКАЗ
                            button(type='button').button.product__callorder.jsCallback ЗАКАЗАТЬ КОНСУЛЬТАЦИЮ


                    //- params
                    .product__params
                        .params
                            .param
                                .param__label Выберите тип двигателя:
                                +select(['АИР132S4', 'АИР132S5', 'АИР132S6'],'type')
                            .param
                                .param__label Выбрать типоразмер:
                                +radios([10, 12, 6, 8],'size')
                            .param
                                .param__label Направляющий аппарат:
                                +select(['Без НА', 'C НА'],'rail')
                            .param
                                .param__label Направление вращения:
                                +select(['Параметр X', 'Параметр Y', 'Параметр Z'],'axis')
                            .param
                                .param__label Выберите мощность привода:
                                +radios([7, 2],'power')
                            .param
                                .param__label Теор. обороты на РК об/мин:
                                +radios([1000, 1500],'rpm')
                            .param
                                .param__label Факт. обороты на РК об/мин:
                                +radios([945, 1440],'rpm-fact')
                            .param
                                .param__label Мин. производ. м3/ч:
                                +radios([20985, 31978],'efficiency')

                    //- desc
                    .product__desc ВО 25-188-10 без НА, АИР132S4, ТИПОРАЗМЕР 10

                    //- sws
                    .product__sws
                        .sws
                            button(type='button' data-id=1).sw Назначение
                            button(type='button' data-id=2).sw Условия эксплуатации
                            button(type='button' data-id=3).sw.active Чертеж
                            button(type='button' data-id=4).sw Размеры
                        select(name='sws').sws-select
                            option(value=1) Назначение
                            option(value=2) Условия эксплуатации
                            option(value=3) Чертеж
                            option(value=4) Размеры


